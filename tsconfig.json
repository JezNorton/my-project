{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "noEmitOnError": true
    },
    "include": [
        "server/**/*",
        "src/**/*",
        "samples/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}